@model UserUpdateViewModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}



    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profile Düzenleme</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Adı-Soyadı</label>
                        <input type="text" class="form-control" asp-for="@Model.namesurname" id="exampleInputName1" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Kullanıcı Adı</label>
                        <input type="text" class="form-control" asp-for="@Model.username" id="exampleInputName1" placeholder="Name">
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email Adres</label>
                        <input type="email" class="form-control" id="exampleInputEmail3" asp-for="@Model.mail" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Yeni Şifre</label>
                        <input type="text" class="form-control" id="exampleInputPassword4" asp-for="@Model.password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                            </span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal</button>
                </form>
            </div>
        </div>
    </div>