@model IEnumerable<CoreProject.EntityLayer.Concrete.Comment>

<div class="comment-top">
	<h4>Comments</h4>
	@if (Model.Any())
	{
		@foreach (var item in Model)
		{
			<div class="media">
				<img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
				<div class="media-body">
					<h5 class="mt-0">@item.Username</h5>
					<p>
						@item.Content
					</p>
				</div>
			</div>
		}
	}else
	{
		<span>Herhangi bir yorum bulunmamaktadır.</span>
	}
	
			
	
</div>
