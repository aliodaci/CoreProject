@model CoreProject.EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Register Now</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using(Html.BeginForm("Index","Register",FormMethod.Post,ValidationSummary.All))
				{
					@Html.ValidationSummary()
					<div class="form-row">
						
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Adınız ve Soyadınız</label>
							@Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
							@* <input type="text" class="form-control" id="validationDefault01" name="Name" placeholder="" required=""> *@
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">Email Adress</label>
							@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
							@* <input type="email" class="form-control" id="validationDefault02" name="Email" placeholder="" required=""> *@
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Password</label>
							@Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
							@* <input type="password" class="form-control" id="password1" name="Password" placeholder="" required=""> *@
						</div>

						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Resim</label>
							@Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
							@* <input type="text" class="form-control" id="password1" name="ImageUrl" placeholder="" required=""> *@
						</div>
					</div>
					


					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p>
						<a href="#" id="btn1">By clicking Signup, I agree to your terms</a>
					</p>
				}
			</div>
		</div>
	</div>
</section>
