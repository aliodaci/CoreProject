@using CoreProject.EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="ibox">
                <div class="ibox-content product-box">

                    <div>
                        <img src="@item.Image" height="225" width="240" />
                    </div>
                    <div class="product-desc">
                        <span class="product-price">
                            @(((DateTime)item.CreateDate).ToString("MM/dd/yyyy"))
                        </span>
                        <small class="text-muted">@item.Category.CategoryName</small>
                        <a href="#" class="product-name"> @item.Title</a>



                        <div class="small m-t-xs">
                            @item.Content.Substring(0,item.Content.Substring(0,20).LastIndexOf(" "))...
                        </div>
                        <div class="m-t text-righ">

                            <a href="/blog/details/@item.Id" class="btn btn-xs btn-outline btn-primary">Detaylar <i class="fa fa-long-arrow-right"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>

