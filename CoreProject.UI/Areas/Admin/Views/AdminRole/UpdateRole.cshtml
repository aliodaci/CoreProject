@using CoreProject.UI.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Role Düzenleme Sayfası</h1>
<form method="post">
    <div class="form-control">
        <label>Role ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-control">
        <label>Role Başlığı</label>
        <input type="text" name="name" value="@Model.name" class="form-control" />
    </div>
    <button class="btn btn-success mt-2">Güncelle</button>
</form>

